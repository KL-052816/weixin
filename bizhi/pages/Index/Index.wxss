.header{
  width: 100%;
  margin-top: 20rpx;
  padding: 10rpx 2%;
  overflow: hidden;
}
.header .header-box{
  width: 24%;
  float: left;
  text-align: center;
  /* overflow: hidden; */
}
.header .header-box .header-pho{
  position: relative;
  left: 25%;
  width: 50%;
  height: 0;
  padding-top:50%; 
  
}
.header .header-box .header-pho .header-photo{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius:50%;
}
.header .header-box .header-text{
  font-size: 28rpx;
}
